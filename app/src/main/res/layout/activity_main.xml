<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_control">

        <ImageButton
            android:id="@+id/ib_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="18dp"
            android:background="@mipmap/icon_return"/>

        <ImageButton
            android:id="@+id/ib_setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_swich"/>

        <ImageButton
            android:id="@+id/ib_voice"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_voice"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/ib_lamp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_lamp"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/ib_music"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_music"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rl_gear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="23dp"
            android:layout_marginBottom="10dp">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ib_gear_one"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@mipmap/icon_one"/>

                <ImageButton
                    android:id="@+id/ib_gear_two"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@mipmap/icon_two"
                    android:layout_marginTop="12dp"/>

                <ImageButton
                    android:id="@+id/ib_gear_three"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@mipmap/icon_three"
                    android:layout_marginTop="12dp" />

            </android.support.v7.widget.LinearLayoutCompat>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_gear"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="23dp"
            android:layout_marginBottom="10dp">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ib_go"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@mipmap/icon_up"/>

                <ImageButton
                    android:id="@+id/ib_back"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@mipmap/icon_down"
                    android:layout_marginTop="12dp" />

            </android.support.v7.widget.LinearLayoutCompat>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="249dp"
                android:layout_height="113dp"
                android:src="@mipmap/meter"/>

            <ImageButton
                android:id="@+id/ib_stop"
                android:layout_width="122dp"
                android:layout_height="62dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:background="@mipmap/icon_stop"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_direction"
            android:layout_width="186dp"
            android:layout_height="182dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:src="@mipmap/control"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>